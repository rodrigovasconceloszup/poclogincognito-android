<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/itauBackGround"
    tools:context=".ui.iupp.IuppActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/iupp_girl" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="391dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/cardLinearLayout"
                android:layout_width="361dp"
                android:layout_height="491dp"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.824"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:layout_constraintVertical_bias="0.503">

                <TextView
                    android:id="@+id/iupp"
                    android:layout_width="207dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/itautext_bd"
                    android:gravity="top"
                    android:lineSpacingExtra="0sp"
                    android:text="Programa iupp"
                    android:textAppearance="@style/iupp" />

                <Space
                    android:layout_height="24dp"  android:layout_width="0dp"/>

                <View
                    android:id="@+id/rectangle"
                    android:layout_width="295dp"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rectangle"
                    />

                <Space
                    android:layout_height="16dp"  android:layout_width="0dp"/>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="340dp"
                    android:layout_height="42dp"

                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="-4dp"
                    tools:layout_editor_absoluteY="36dp">

                    <TextView
                        android:id="@+id/voc_possui_"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="193dp"
                        android:fontFamily="@font/itautext_rg"
                        android:gravity="top"
                        android:lineSpacingExtra="2sp"
                        android:text="sobre o iupp"
                        android:textAppearance="@style/iuppText"
                        android:translationY="-0.99sp" />

                    <Space
                        android:layout_width="130dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/expandOcultTextView"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:fontFamily="@font/itautext_rg"
                        android:text="expandir"
                        tools:layout_editor_absoluteX="32dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <ImageView
                        android:id="@+id/expandIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/arrow_down" />
                </LinearLayout>


                <ScrollView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/moreTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <Space
                            android:layout_height="6dp"  android:layout_width="0dp"/>

                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/content"
                            android:layout_width="260dp"
                            android:layout_height="86dp"
                            android:layout_marginLeft="23dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/content"
                            >
                            <TextView
                                android:id="@+id/agora_voc_j"
                                android:layout_width="224dp"
                                android:layout_height="54dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="16dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="16dp"
                                android:text="Agora, você junta pontos do cartão direto no iupp, mantendo as mesmas regras que tinha no Sempre Presente. "
                                android:textAppearance="@style/iuppInfoText"
                                android:gravity="top"
                                />
                        </RelativeLayout>

                        <Space
                            android:layout_height="24dp"  android:layout_width="0dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="24dp"
                            android:text="no iupp você pode:"
                            tools:layout_editor_absoluteX="32dp"
                            tools:layout_editor_absoluteY="16dp" />

                        <Space
                            android:layout_height="15dp"  android:layout_width="0dp"/>

                        <TextView
                            android:id="@+id/txv"
                            android:layout_width="279dp"
                            android:layout_height="18dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="24dp"
                            android:layout_alignParentBottom="true"
                            android:text="\u2022 Consultar extrato de pontos"
                            android:textAppearance="@style/iuppText"
                            android:gravity="top"
                            />
                        <Space
                            android:layout_height="4dp"  android:layout_width="0dp"/>
                        <TextView
                            android:id="@+id/txv2"
                            android:layout_width="279dp"
                            android:layout_height="18dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="24dp"
                            android:layout_alignParentBottom="true"
                            android:text="\u2022 Comprar produtos com pontos ou pontos + cartão de crédito"
                            android:textAppearance="@style/iuppText"
                            android:gravity="top"
                            />
                        <Space
                            android:layout_height="4dp"  android:layout_width="0dp"/>
                        <TextView
                            android:id="@+id/txv3"
                            android:layout_width="279dp"
                            android:layout_height="18dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="24dp"
                            android:layout_alignParentBottom="true"
                            android:text="\u2022 Trocar pontos por desconto na fatura do seu Itaucard"
                            android:textAppearance="@style/iuppText"
                            android:gravity="top"
                            />
                        <Space
                            android:layout_height="4dp"  android:layout_width="0dp"/>
                        <TextView
                            android:id="@+id/txv4"
                            android:layout_width="279dp"
                            android:layout_height="18dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="24dp"
                            android:layout_alignParentBottom="true"
                            android:text="\u2022 Trocar pontos por experiências em restaurantes e benefícios"
                            android:textAppearance="@style/iuppText"
                            android:gravity="top"
                            />
                        <Space
                            android:layout_height="4dp"  android:layout_width="0dp"/>
                        <TextView
                            android:id="@+id/txv5"
                            android:layout_width="279dp"
                            android:layout_height="18dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="24dp"
                            android:layout_alignParentBottom="true"
                            android:text="\u2022 Transferir pontos para parceiros"
                            android:textAppearance="@style/iuppText"
                            android:gravity="top"
                            />
                    </LinearLayout>
                </ScrollView>

                <View
                    android:layout_width="295dp"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rectangle"
                    />

                <Space
                    android:layout_height="23dp"  android:layout_width="0dp"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/itautext_rg"
                    android:text="pontos disponíveis"
                    tools:layout_editor_absoluteX="29dp"
                    tools:layout_editor_absoluteY="105dp" />

                <Space
                    android:layout_height="4dp"  android:layout_width="0dp"/>

                <TextView
                    android:id="@+id/r_2_650_00"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/itautext_bd"
                    android:gravity="top"
                    android:lineSpacingExtra="7sp"
                    android:text="50.000 pontos"
                    android:textAppearance="@style/iuppMegaBold"
                    android:translationY="-3.45sp" />

                <Button
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/iuppContainerColor"
                    android:elevation="0dp"
                    android:fontFamily="@font/itautext_rg"
                    android:text="você tem 1.000 pts prestes a expirar"
                    android:textAllCaps="false"
                    android:textAppearance="@style/iuppText" />

                <Space
                    android:layout_height="16dp"  android:layout_width="0dp"/>

                <View
                    android:layout_width="295dp"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rectangle"
                    />

                <Button
                    android:id="@+id/goToIuppBtn"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/iuppSecondaryColor"
                    android:fontFamily="@font/itautext_rg"
                    android:text="ir para o iupp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    tools:layout_editor_absoluteX="18dp"
                    tools:layout_editor_absoluteY="477dp" />
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>